<!-- slick.min.jsの読み込み -->
<script src="{{ 'slick.min.js' | asset_url }}"></script>

<div class="blog color-{{ section.settings.color_scheme }} gradient">
  <ul id="slider" class="slider">
    {% for article in blogs.news.articles %}
      <li>
        <div class="container color-{{ section.settings.color_scheme }}">
          {% if section.settings.show_image == true %}
            <div class="blog-image">
              <a href="{{ article.url }}">
                <img src="{{ article.image | img_url: '2048x2048' | escape }}" alt="{{ article.title }}">
              </a>
            </div>
          {% endif %}
          <a href="{{ article.url }}"><h2>{{ article.title }}</h2></a>
          {% if section.settings.show_date == true %}
            <p><time datetime="{{ article.updated_at }}">{{ article.updated_at | date: "%Y/%m/%d" }}</time></p>
          {% endif %}
          {% if section.settings.show_author == true %}
            <p>{{ article.author }}</p>
          {% endif %}
          <p>{{ article.content }}</p>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>

<style>
/* スライダーのスタイル */
#slider {
  list-style: none;
  padding: 0;
}

#slider li {
  width: 100%;
}

/* 以下は既存のスタイルの一部（必要に応じて適宜修正してください） */
.container {
  display: flex;
}

.container li {
  width: calc(100% / {{ section.settings.post_limit }});
}

.container h2 {
  font-size: 24px;
  margin-bottom: 10px;
}

.container p {
  font-size: 16px;
  margin-bottom: 5px;
}

.blog-image {
  width: 100%;
  height: 150px;
  position: relative;
}

.blog-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
}
</style>

<script>
// DOMの読み込み完了後にスライダーを初期化
document.addEventListener('DOMContentLoaded', function() {
  $('#slider').slick({
    autoplay: true,
    dots: true,
    arrows: true,
    infinite: true,
    slidesToShow: {{ section.settings.post_limit }},
    slidesToScroll: 1
  });
});
</script>
