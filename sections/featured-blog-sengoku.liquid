{%- style -%}
  .visuallyhidden {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
    white-space: nowrap;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  }
  .box {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 20px;
  }
  .box h2 {
    font-size: 24px;
    margin-bottom: 10px;
  }
  .box p {
    font-size: 16px;
    margin-bottom: 5px;
  }
  .pagination {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  }
  .pagination a {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    border-radius: 5px;
    background-color: #f2f2f2;
    color: #666;
    text-decoration: none;
  }
  .pagination a:hover {
    background-color: #666;
    color: #fff;
  }
  .current-page {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    border-radius: 5px;
    background-color: #666;
    color: #fff;
  }
  
{%- endstyle -%}  

{% paginate blogs.news.articles by section.settings.post_limit %}
 <div class="container">
  <div class="row"> 
    {% for article in blogs.news.articles %}
      <div class="col-sm-3">
        <div class="box">
          <h2>{{ article.title }}</h2>
          <p>{{ article.content }}</p>
          <a href="{{ article.url }}">Read more</a>
          {% if section.settings.show_author == true %}
            <p>{{ article.author }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
  <div class="pagination">
    {% if paginate.previous %}
      <a href="{{ paginate.previous.url }}">previous</a>
    {% endif %}
    {% for page in paginate.pages %}
      {% if page.is_link %}
        <a href="{{ page.url }}">{{ page.title }}</a>
      {% elsif page.title %}
        <span class="current-page">{{ page.title }}</span>
      {% endif %}
    {% endfor %}
    {% if paginate.next %}
      <a href="{{ paginate.next.url }}">next</a>
    {% endif %}
  </div>
{% endpaginate %}

{% schema %}
{
  "name": "ブログ記事スライダー",
  "tag": "section",
  "settings":[
    {
     "type": "inline_richtext",
      "id": "heading",
      "default": "Blog posts",
      "label": "見出し"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "小"
        },
        {
          "value": "h1",
          "label": "中"
        },
        {
          "value": "h0",
          "label": "大"
        }
      ],
      "default": "h1",
      "label": "見出しのサイズ"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "ブログ"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "表示するブログ記事数"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "日付を表示する"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "執筆者を表示する"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下部の余白",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "ブログ記事スライダー",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}