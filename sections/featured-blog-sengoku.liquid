{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  ul{
    list-style: none;
    padding: 0;
  }
  .container {
    display: flex;
    list-style: none;
  }
  .container li {
    border: none;
    margin-left: auto;
    margin-right: auto;
    padding: 5px;
    width: calc(100% / {{ section.settings.post_limit }});
  }
  .container h2{
  }
  .box {
    flex: 1;
    padding: 0;
    margin: 0;
    
  }
  .box h2 {
    font-size: 24px;
    margin-bottom: 10px;
  }
  .box p {
    font-size: 16px;
    margin-bottom: 5px;
  }
  .pagination {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  }
  .pagination a {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    border-radius: 5px;
    background-color: #f2f2f2;
    color: #666;
    text-decoration: none;
  }
  .pagination a:hover {
    background-color: #666;
    color: #fff;
  }
  .current-page {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 5px;
    border-radius: 5px;
    background-color: #666;
    color: #fff;
  }
  .blog-image{
    flex: 1;
    width: 100%;
    height: 150px;
    position: relative;
  }
  .blog-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
{%- endstyle -%}
<head>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  {{ 'slick-slide.css' | asset_url | stylesheet_tag }}
  {{ 'slick-slide.js' | asset_url | script_tag }}
</head>
<div class="blog color-{{ section.settings.color_scheme }} gradient{% if section.settings.heading == blank %} no-heading{% endif %}">
{% paginate blogs.news.articles by section.settings.post_limit %}
  <div class="page-width-desktop isolate{% if posts_displayed < 3 %} page-width-tablet{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper-with-link{% if posts_displayed > 2 %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <h2 color="white"
          id="SectionHeading-{{ section.id }}"
          class="blog__title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
          {% endif %}
        >
          {{ section.settings.heading }}
        </h2>
      </div>
    {%- endunless -%}
 <ul class="slider">
  <div class="container color-{{ section.settings.color_scheme }}"> 
    {% for article in blogs.news.articles %}
      <li class="">
        <div class="box">
          {% if section.settings.show_image == true %}
            <div class="blog-image">
            {{ article.image | img_url: '1024x1024' | img_tag: article.title | escape }}
            </div>
                  {% endif %}
                    <h2>{{ article.title }}</h2>
                    <p>{{ article.content }}</p>
                    <p><a href="{{ article.url }}">Read more</a></p>
                    {% if section.settings.show_date == true %}
                      <time datetime="{{ article.updated_at }}">{{ article.updated_at | date: "%Y/%m/%d" }}</time>
                    {% endif %}
                    {% if section.settings.show_date == true and section.settings.show_author == true %}
                      .
                    {% endif %}
                    {% if section.settings.show_author == true %}
                      {{ article.author }}
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
            </div>
          </ul>
            <div class="pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}">next</a>
              {% endif %}
              {% for page in paginate.pages %}
                {% if page.is_link %}
                  <a href="{{ page.url }}">{{ page.title }}</a>
                {% elsif page.title %}
                  <span class="current-page">{{ page.title }}</span>
                {% endif %}
              {% endfor %}
            {% if paginate.next %}
          <a href="{{ paginate.next.url }}">next</a>
        {% endif %}
      {% endpaginate %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "ブログ記事スライダー",
  "tag": "section",
  "settings":[
    {
     "type": "inline_richtext",
      "id": "heading",
      "default": "Blog posts",
      "label": "見出し"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "小"
        },
        {
          "value": "h1",
          "label": "中"
        },
        {
          "value": "h0",
          "label": "大"
        }
      ],
      "default": "h1",
      "label": "見出しのサイズ"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "ブログ"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "表示するブログ記事数"
    },
        {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "記事のサムネイルを表示する"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "日付を表示する"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "執筆者を表示する"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下部の余白",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "ブログ記事スライダー",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}