<!-- slick.min.jsの読み込み -->
<script src="{{ 'slick.min.js' | asset_url }}"></script>

<div class="blog color-{{ section.settings.color_scheme }} gradient">
  <ul id="slider" class="slider">
    {% for article in blogs.news.articles %}
      <li>
        <div class="container color-{{ section.settings.color_scheme }}">
          {% if section.settings.show_image == true %}
            <div class="blog-image">
              <a href="{{ article.url }}">
                <img src="{{ article.image | img_url: '2048x2048' | escape }}" alt="{{ article.title }}">
              </a>
            </div>
          {% endif %}
          <a href="{{ article.url }}"><h2>{{ article.title }}</h2></a>
          {% if section.settings.show_date == true %}
            <p><time datetime="{{ article.updated_at }}">{{ article.updated_at | date: "%Y/%m/%d" }}</time></p>
          {% endif %}
          {% if section.settings.show_author == true %}
            <p>{{ article.author }}</p>
          {% endif %}
          <p>{{ article.content }}</p>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>

{% style %}
/* スライダーのスタイル */
#slider {
  list-style: none;
  padding: 0;
}

#slider li {
  width: 100%;
}

/* 以下は既存のスタイルの一部（必要に応じて適宜修正してください） */
.container {
  display: flex;
}

.container li {
  width: calc(100% / {{ section.settings.post_limit }});
}

.container h2 {
  font-size: 24px;
  margin-bottom: 10px;
}

.container p {
  font-size: 16px;
  margin-bottom: 5px;
}

.blog-image {
  width: 100%;
  height: 150px;
  position: relative;
}

.blog-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  top: 0;
  left: 0;
}
{% endstyle %}

{% javascript %}
// DOMの読み込み完了後にスライダーを初期化
document.addEventListener('DOMContentLoaded', function() {
  $('#slider').slick({
    autoplay: true,
    dots: true,
    arrows: true,
    infinite: true,
    slidesToShow: {{ section.settings.post_limit }},
    slidesToScroll: 1
  });
});
{% endjavascript %}

{% schema %}
{
  "name": "ブログ記事スライダー",
  "tag": "section",
  "settings":[
    {
     "type": "inline_richtext",
      "id": "heading",
      "default": "Blog posts",
      "label": "見出し"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "小"
        },
        {
          "value": "h1",
          "label": "中"
        },
        {
          "value": "h0",
          "label": "大"
        }
      ],
      "default": "h1",
      "label": "見出しのサイズ"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "ブログ"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "表示するブログ記事数"
    },
        {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "記事のサムネイルを表示する"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "日付を表示する"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "執筆者を表示する"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上部の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下部の余白",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "ブログ記事スライダー",
      "settings": {
        "blog": "News"
      }
    }
  ]
}
{% endschema %}